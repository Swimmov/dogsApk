<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/background_food"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/fon_no_dog_new" />

    <LinearLayout
        android:id="@+id/cont1food"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/cont2food"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            >


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/cont4food"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:id="@+id/line1food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        >

                        <ImageView
                            android:id="@+id/sun"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/sunrise"
                            android:layout_marginLeft="25dp"
                            />

                        <TextView
                            android:id="@+id/txtmorningfood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/txtmorningfood"
                            android:textColor="@color/black95"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line2food"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_marginBottom="10dp"

                        >

                        <ImageView
                            android:id="@+id/imgdryfood1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
android:layout_weight="33"
                            android:src="@drawable/img_dry_food_1"/>

                        <ImageView
                            android:id="@+id/imgdryfood2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
android:layout_weight="33"
                            android:src="@drawable/img_dry_food_2"

                            />

                        <ImageView
                            android:id="@+id/imgdryfood3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
android:layout_weight="33"
                            android:src="@drawable/img_dry_food_3"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line3food"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_marginBottom="10dp"
                        >

                        <ImageView
                            android:id="@+id/imgcookdfood1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="33"
                            android:src="@drawable/img_cooked_food_1"/>

                        <ImageView
                            android:id="@+id/imgcookdfood2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="33"
                            android:src="@drawable/img_cooked_food_2"

                            />

                        <ImageView
                            android:id="@+id/imgcookdfood3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="33"
                            android:src="@drawable/img_cooked_food_3"

                            />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/line4food"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="30dp">

                        <ImageView
                            android:id="@+id/moon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/moon"
                            android:layout_marginLeft="25dp"

                            />

                        <TextView
                            android:id="@+id/txteveningfood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/txteveninggfood"
                            android:textColor="@color/black95"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line5food"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        >


                        <ImageView
                            android:id="@+id/imgdryfood11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="33"
                            android:src="@drawable/img_dry_food_1" />

                        <ImageView
                            android:id="@+id/imgdryfood22"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="33"
                            android:src="@drawable/img_dry_food_2"
                            />

                        <ImageView
                            android:id="@+id/imgdryfood33"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="33"
                            android:src="@drawable/img_dry_food_3"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line6food"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:id="@+id/imgcookdfood11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="33"
                            android:src="@drawable/img_cooked_food_1" />

                        <ImageView
                            android:id="@+id/imgcookdfood22"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="33"
                            android:src="@drawable/img_cooked_food_2"

                            />

                        <ImageView
                            android:id="@+id/imgcookdfood33"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="33"
                            android:src="@drawable/img_cooked_food_3"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line7food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="35dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_back_food"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_stroke_black95_press_white"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="@string/back"
                            android:textAllCaps="false"
                            android:textColor="@color/black95"
                            android:textSize="20sp"
                            android:layout_marginRight="55dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btncontinuefood"
                            android:background="@drawable/button_stroke_black95_press_white"
                            android:text="@string/textcontinue"
                            android:textColor="@color/black95"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textAllCaps="false"
                            android:textSize="24sp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            />

                    </LinearLayout>


                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>